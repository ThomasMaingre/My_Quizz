{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <div class="container">
        
        <table class="table table-dark table-striped">
            <h2 class="text-light text-center" >Utilisateurs</h2>
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Mail</th>
                    <th>Admin</th>
                    <th>Confirmé</th>
                    <th>Dernière Connexion</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.name }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.status == 2 ? 'Oui' : 'Non' }}</td>
                        <td>{{ user.confirmed ? 'Oui' : 'Non' }}</td>
                        <td>{{ user.LastConnection == null ? ' ' : user.LastConnection|date('Y-m-d H:i:s') }}</td>
                        <td><a href="{{ path('user_stat', { 'userId': user.id }) }}">Statistiques</a></td>
                        <td><a href="{{ path('edit_user', { 'userId': user.id }) }}">Modifier</a></td>
                        <td><a href="{{ path('disable_user', { 'userId': user.id }) }}">Supprimer</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
