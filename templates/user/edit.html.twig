{% extends 'base.html.twig' %}

{% block title %}Edit Profile
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-5">Edit Profile</h1>

		<form action="{{ path('app_user_edit') }}" method="POST">
			{{ form_row(form.name, {'label': 'Username', 'attr': {'class': 'form-control'}}) }}
			{{ form_row(form.email, {'label': 'Email', 'attr': {'class': 'form-control'}}) }}
			{{ form_row(form.password, {'label': 'Password', 'attr': {'class': 'form-control'}}) }}

			<!-- Add more form fields for editing user details here -->

			<button type="submit" class="btn btn-primary">Save Changes</button>
		</form>
	</div>
{% endblock %}
