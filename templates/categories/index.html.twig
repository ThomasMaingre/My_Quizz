{% extends 'base.html.twig' %}

{% block title %}MyKwizine
{% endblock %}

{% block body %}
	<div class="row">
		{% for categorie in categories %}
			<div class="col-md-3">
				<a href="{{ path('category', { id: categorie.id }) }}" class="card mb-3 text-center">
					<div style="background-image: url('/assets/{{ categorie.id }}.png'); background-size: cover; background-position: center center; height: 250px;"></div>
					<div class="card-body">
						<h5 class="card-title">{{ categorie.name }}</h5>
					</div>
				</a>
			</div>
		{% endfor %}
	</div>
{% endblock %}
