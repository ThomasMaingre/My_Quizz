{% extends 'base.html.twig' %}

{% block title %}New Quizz{% endblock %}

{% block body %}

<div class="card bg-dark text-light">
    <div class="card-body">
        <div class="creation_form">
            <form action="{{ path('start_creation') }}" method="POST">
                <h2>Creer un nouveau Quizz</h2>
                
                <label for="nb_questions">Nombre de questions:</label>
                <input type="number" id="nb_questions" name="nb_questions" required>
                
                <button type="submit">Creer mon Quizz</button>
            </form>
        </div>
    </div>
</div>

{% endblock %}
